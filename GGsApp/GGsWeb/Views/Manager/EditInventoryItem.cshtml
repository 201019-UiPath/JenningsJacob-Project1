@model GGsWeb.Models.InventoryItem

@{
    ViewData["Title"] = "EditInventoryItem";
}

<div class="row ">
    <div class="col"><h1>Edit Inventory Item</h1></div>
</div>
<hr />
<div class="row justify-content-center">
    <div class="col">
        <h3>@Html.DisplayFor(model => model.videoGame.name)</h3>
        <h5><span class="text-muted">@Html.DisplayNameFor(model => model.videoGame.platform):</span> @Html.DisplayFor(model => model.videoGame.platform)</h5>
        <h5><span class="text-muted">@Html.DisplayNameFor(model => model.videoGame.esrb):</span> @Html.DisplayFor(model => model.videoGame.esrb)</h5>
        <h5><span class="text-muted">@Html.DisplayNameFor(model => model.videoGame.cost):</span> @Html.DisplayFor(model => model.videoGame.cost)</h5>
    </div>
    <div class="col-md-4">
        <form asp-action="EditInventoryItem">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <div class="form-group" hidden="hidden">
                <label asp-for="id" class="control-label"></label>
                <input asp-for="id" class="form-control" />
                <span asp-validation-for="id" class="text-danger"></span>
            </div>
            <div class="form-group" hidden="hidden">
                <label asp-for="videoGameId" class="control-label"></label>
                <input asp-for="videoGameId" class="form-control" />
                <span asp-validation-for="videoGameId" class="text-danger"></span>
            </div>
            <div class="form-group" hidden="hidden">
                <label asp-for="locationId" class="control-label"></label>
                <input asp-for="locationId" class="form-control" />
                <span asp-validation-for="locationId" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="quantity" class="control-label"></label>
                <input asp-for="quantity" class="form-control" />
                <span asp-validation-for="quantity" class="text-danger"></span>
            </div>
            <div class="form-group">
                <input type="submit" value="Save" class="btn btn-primary" />
                <button class="btn btn-danger">Delete</button>
            </div>
        </form>
    </div>
</div>

<div>
    <a asp-action="GetInventory">Back to List</a>
</div>

