@model GGsWeb.Models.InventoryItemViewModel
@{
    ViewData["Title"] = "AddInventoryItem";
}

<section id="cover" class="min-vh-100">
    <div id="cover-caption">
        <div class="container">
            <div class="row text-white">
                <div class="col-xl-5 col-lg-6 col-md-8 col-sm-10 mx-auto form p-4">
                    <h3 class="display-4 py-2 text-wrap">Add Inventory Item</h3>
                    <div class="px-2">
                        <form asp-action="AddInventoryItem" class="text-left">
                            <div class="form-row">
                                <div class="form-group col-12">
                                    <label asp-for="name"></label>
                                    <input type="text" class="form-control" asp-for="name"/>
                                </div>
                            </div>
                            <div class="form-row">
                                <div class="form-group col-6">
                                    <label asp-for="platform"></label>
                                    <select class="form-control" asp-for="platform">
                                        <option selected>Choose...</option>
                                        <option>PC</option>
                                        <option>PS5</option>
                                        <option>Switch</option>
                                        <option>Xbox</option>
                                    </select>
                                </div>
                                <div class="form-group col-6">
                                    <label asp-for="esrb"></label>
                                    <select class="form-control" asp-for="esrb">
                                        <option selected>Choose...</option>
                                        <option>E</option>
                                        <option>E10</option>
                                        <option>T</option>
                                        <option>M</option>
                                    </select>
                                </div>
                            </div>
                            <div class="form-row">
                                <div class="form-group col-6">
                                    <label asp-for="quantity"></label>
                                    <input type="number" min="1" class="form-control" asp-for="quantity">
                                </div>
                                <div class="form-group col-6">
                                    <label asp-for="cost"></label>
                                    <input type="number" min="0" class="form-control" asp-for="cost">
                                </div>
                            </div>
                            <div class="form-row">
                                <div class="form-group col-12">
                                    <label asp-for="description"></label>
                                    <textarea class="form-control" rows="3" asp-for="description"></textarea>
                                </div>
                            </div>
                            <div class="form-group">
                                <input type="submit" value="Add to Inventory" class="btn btn-primary shadow-lg">
                            </div>
                        </form>
                    </div>
                </div>
            </div>
        </div>
    </div>
</section>
